<%= form_for @task, remote: true do |f| %>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.hidden_field :priority %>
  </div>
  <div class="field">
    <%= f.label :due_date %> (optional)<br>
    <%= f.date_field :due_date %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
