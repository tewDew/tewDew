<%= form_for @task, remote: true do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.hidden_field :priority %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
